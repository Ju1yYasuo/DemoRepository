<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.modules.sys.mapper.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.demo.modules.sys.entity.User">
        <id column="id" property="id"/>
        <result column="delete_flag" property="deleteFlag"/>
        <result column="remarks" property="remarks"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="user_name" property="userName"/>
        <result column="password" property="password"/>
        <result column="name" property="name"/>
        <result column="sex" property="sex"/>
        <result column="age" property="age"/>
        <result column="card_number" property="cardNumber"/>
        <result column="department" property="department"/>
        <result column="position" property="position"/>
        <result column="role" property="role"/>
        <result column="phone_number" property="phoneNumber"/>
        <result column="email" property="email"/>
        <result column="id_number" property="idNumber"/>
        <result column="birthday" property="birthday"/>
        <result column="emergency_contact" property="emergencyContact"/>
        <result column="emergency_contact_phone" property="emergencyContactPhone"/>
        <result column="face_picture" property="facePicture"/>
        <result column="status" property="status"/>
        <result column="log_in_time" property="logInTime"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        delete_flag,
        remarks,
        create_time,
        update_time,
        user_name, password, name, sex, age, card_number, department, position, role, phone_number, email, id_number, birthday, emergency_contact, emergency_contact_phone, face_picture, status, log_in_time
    </sql>

    <select id="getUserBySex" parameterType="Integer" resultMap="BaseResultMap">
        select * from sys_user where sex = #{sex}
    </select>
</mapper>
